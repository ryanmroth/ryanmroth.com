{
  "compilerOptions": {
    // Language and Environment
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "preserve",

    // Modules
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "src/",
    "paths": {
      "@/styles/*": ["styles/*"],
      "@/components/*": ["components/*"],
      "@/app/*": ["app/*"],
      "@/lib/*": ["lib/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"]
    },

    // JavaScript Support
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    // Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,

    // Emit
    "noEmit": true,
    "incremental": true,

    // Interop Constraints
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Next.js
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.json"
  ],
  "exclude": ["node_modules", ".next", "out"]
}
